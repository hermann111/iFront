<?xml version="1.0" encoding="utf-8"?>

<!-- Layout for weather forecast list item for future day (not today) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:background="@drawable/touch_selector">

    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/list_custom_view_icon"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_48"/>

    </FrameLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_custom_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           style="@style/listingnamestyle"/>

        <TextView
            android:id="@+id/list_custom_view_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buttontextstyle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_custom_view_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harmanjeet Singh"
            android:layout_gravity="center"
            style="@style/buttontextstyle"/>

        <TextView
            android:id="@+id/list_custom_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/buttontextstyle"/>
    </LinearLayout>
</LinearLayout>
